srcdir = .
top_srcdir = ..
prefix = /ccs/home/csep42/hypre-mini-app/build/install
exec_prefix = ${prefix}



HYPRE_RELEASE_NAME    = hypre
HYPRE_RELEASE_VERSION = 2.14.0
HYPRE_RELEASE_DATE    = 2018/03/16
HYPRE_RELEASE_TIME    = 00:00:00
HYPRE_RELEASE_BUGS    = hypre-support@llnl.gov

HYPRE_SRC_TOP_DIR = /ccs/home/csep42/hypre-mini-app/deps/hypre/src
HYPRE_BUILD_DIR   = /ccs/home/csep42/hypre-mini-app/deps/hypre/src/hypre

HYPRE_INSTALL_DIR = /ccs/home/csep42/hypre-mini-app/build/install
HYPRE_LIB_INSTALL = ${exec_prefix}/lib
HYPRE_INC_INSTALL = ${prefix}/include

HYPRE_LIB_SUFFIX = .a

.SUFFIXES:
.SUFFIXES: .o .f .c .C .cxx .cc .cu

.f.o:
	$(FC) $(FFLAGS) -c $< 
.c.o:
	$(CC) $(CFLAGS) -c $< 
.C.o:
	$(CXX) $(CXXFLAGS) -c $<
.cxx.o:
	$(CXX) $(CXXFLAGS) -c $<
.cc.o:
	$(CXX) $(CXXFLAGS) -c $<
.cu.o:
	$(NVCC) $(NVCCFLAGS) -c $<

FC       = 
FFLAGS   = -O  $(FC_COMPILE_FLAGS)

CC       = nvcc
CFLAGS   = -O -ccbin=mpixlC -expt-extended-lambda -gencode arch=compute_60,"code=sm_60" -dc --std=c++11 -Xcompiler -fopenmp -Xcompiler -Wno-deprecated-register --x cu -DHYPRE_USE_CUDA  -DUSE_NVTX -DHYPRE_USE_GPU -DHYPRE_MEMORY_GPU -DHYPRE_USE_MANAGED -I/include  -DHAVE_CONFIG_H $(C_COMPILE_FLAGS)

CXX      = nvcc
CXXFLAGS = -O -ccbin=mpixlC -expt-extended-lambda -gencode arch=compute_60,"code=sm_60" -dc --std=c++11 -Xcompiler -fopenmp -Xcompiler -Wno-deprecated-register --x cu -DHYPRE_USE_CUDA  -DUSE_NVTX -DHYPRE_USE_GPU -DHYPRE_MEMORY_GPU -DHYPRE_USE_MANAGED -I/include  -DHAVE_CONFIG_H $(CXX_COMPILE_FLAGS)

NVCC 	  = nvcc
NVCCFLAGS = -O3 -arch=sm_60  -ccbin=xlc  -I ../hypre/include -I /usr/tcetmp/packages/spectrum_mpi/spectrum_mpi-10.1-xl-gcc-4.9.3/mpi/include/ -DUSE_NVTX -c -DHYPRE_USE_GPU -DHYPRE_USE_MANAGED -DHYPRE_MEMORY_GPU -I/include
NVCCLIBS  = -L/lib64 -lcusparse -lcudart -lcublas -lnvToolsExt

LINK_FC  = 
LINK_CC  = nvcc
LINK_CXX = nvcc

BUILD_FC_SHARED     = 
BUILD_CC_SHARED     = 
BUILD_CXX_SHARED    = 
SHARED_COMPILE_FLAG = 
SHARED_BUILD_FLAG   = 
SHARED_SET_SONAME   = 
SHARED_OPTIONS      = 

BUILD_PYTHON = 0
PYTHON       = 

BUILD_JAVA = 0

AR     = ar -rcu
RANLIB = ranlib

LDFLAGS =  -ccbin=mpixlC -gencode arch=compute_60,"code=sm_60" -Xcompiler -fopenmp  -lcudart -lcuda 
LIBS    =  -lstdc++ -lm  -L/lib64 -lcusparse -lcudart -lcublas -lnvToolsExt   
